<!DOCTYPE html>
<html>
  <head>
    <% include ../head %>
  </head>
  <body>
    <% include ../navigation %>
    <div id="wrapper">
      <h1>Scraped Posts</h1>
      <% if(posts.length == 0) { %>
        <em>There are no posts to display</em>
      <% } else {%>
        <table>
          <thead>
            <th>Company</th>
            <th></th>
            <th>Description</th>
          </thead>
          <tbody>
            <% posts.forEach(function(post) { %>
              <tr>
                <td><%= post.company.name %></td>
                <td><%= post.description %></td>
                <td><a href="#">Details</a></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% }%>
    </div>
  </body>
</html>
